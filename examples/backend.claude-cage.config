-- Example project-specific configuration for a backend project
-- This file demonstrates how to override workspace settings for a specific project
--
-- Usage in a multi-project workspace:
--   1. Create claude-cage.config with shared settings (common excludes, network rules)
--   2. Create backend.claude-cage.config (this file) with backend-specific overrides
--   3. Run: sudo claude-cage backend
--
-- The settings in this file will be merged with claude-cage.config,
-- with this file's settings taking precedence for simple values,
-- and arrays being merged together.

claude_cage {
    -- Source directory for this project (relative to workspace root)
    source = "backend",

    -- Backend-specific file excludes (merged with workspace excludes)
    excludeName = {
        "target",           -- Maven/Gradle build output
        "*.class",          -- Java bytecode
        ".m2"               -- Maven local repository
    },

    -- Additional path exclusions for backend
    excludePath = {
        "src/main/resources/application-local.properties",
        "src/main/resources/application-dev.yml"
    },

    -- Backend-specific network allowances (if needed)
    -- Uncomment to allow access to backend database
    -- allowedIPs = { "127.0.0.1:5432", "127.0.0.1:3306" }
}
