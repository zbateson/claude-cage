-- Example configuration for direct mount mode
-- Use this when you have a large directory tree of projects
-- and want to mount the entire tree without syncing
--
-- IMPORTANT: In direct mount mode, you must specify which subdirectory
-- to start Claude in on the command line:
--   Example: cd /home/user/Projects/public && sudo claude-cage my-project
--   This mounts the entire "public" directory and starts Claude in "my-project"

claude_cage {
    -- Project name (required - used as identifier)
    project = "public-projects",

    -- Enable direct mount mode (skips unison sync)
    directMount = true,

    -- Source directory to mount (default: "." if not specified in directMount mode)
    -- This will mount the entire directory tree
    source = ".",

    -- Mount configuration (optional)
    -- mountBase: Base directory under user home (default: "caged")
    --   Files will be at /home/claude/caged/public-projects/
    -- mountBase = "caged",

    -- mounted: Final directory name (default: project name)
    --   You can override to use a different name
    -- mounted = "public",

    -- User mode (default: "single" for shared authentication)
    -- userMode = "single",

    -- Network restrictions (optional)
    -- networkMode = "disabled",
}
