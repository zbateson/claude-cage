-- Example configuration for direct mount mode
-- Use this when you have a large directory tree of projects
-- and want to mount without syncing (saves storage space)
--
-- Two direct mount modes are available:
--   "workspace" - Mounts entire source directory, Claude can access sibling projects
--   "project"   - Mounts only the specified project, Claude isolated to that project
--
-- The project name is derived from the directory structure:
--   Config at ~/Projects/claude-cage.config
--   Running from ~/Projects/my-project
--   -> project = "my-project" (derived automatically)

-- ============================================================================
-- WORKSPACE MODE EXAMPLE
-- ============================================================================
-- Mounts the entire directory tree, allowing Claude to access sibling projects
-- Mount point: /home/claude/caged/<source-basename>/
-- Claude starts in: /home/claude/caged/<source-basename>/my-project/
--
-- claude_cage {
--     directMount = "workspace",
--     -- project is derived from directory structure
--     -- source defaults to config root directory
-- }

-- ============================================================================
-- PROJECT MODE EXAMPLE
-- ============================================================================
-- Mounts only the specified project subdirectory
-- Mount point: /home/claude/caged/<project-name>/
-- Claude starts in: /home/claude/caged/<project-name>/ (mount root)

claude_cage {
    -- Project mode: only mount the specified subdirectory
    -- Claude cannot navigate to sibling projects
    directMount = "project",

    -- Project name is derived from directory structure
    -- Override if needed:
    -- project = "my-project",

    -- Source directory defaults to config root
    -- Override if needed:
    -- source = ".",

    -- Mount configuration (optional)
    -- mountBase: Base directory under user home (default: "caged")
    --   Files will be at /home/claude/caged/<project>/
    -- mountBase = "caged",

    -- Isolation mode (default: "bwrap")
    -- "bwrap" - bwrap namespace isolation, requires sudo
    -- "docker" - Container isolation, no sudo required
    -- isolationMode = "bwrap",

    -- Network restrictions (optional)
    -- networkMode = "disabled",
}
